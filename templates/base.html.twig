<!DOCTYPE html>
<html>
    <head>
        
        <meta charset="UTF-8">
        <meta name="color-scheme" content="light dark">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{% block metadesc %}{% endblock %}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block javascript %}
        <script>
            // Important to be 1st in the DOM
            const theme = localStorage.getItem('theme') || 'light';
            document.documentElement.dataset.appliedMode = theme;
          </script>
        {% endblock javascript %}
        {% block stylesheets %}
            <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
            {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"> #}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>

    <body>
        <div id="body-wrapper" id="dark-mode">
            {% block header %}
            <header>
                <nav>
                    <a href="{{ path('app_home') }}" class="nav-main">Home</a>
        
                    {% if app.user %}

                        <a class="burger-items" href="{{ path('app_formation') }}"><i class="fa-solid fa-caret-right"></i>&nbsp;Formations</a>
                                    
                        <a class="burger-items" href="{{ path('app_session') }}"><i class="fa-solid fa-caret-right"></i>&nbsp;Sessions</a>
                                    
                        <a class="burger-items" href="{{ path('app_tag') }}"><i class="fa-solid fa-caret-right"></i>&nbsp;Tags&nbsp;&&nbsp;Modules</a>
                    
                        <a class="burger-items" href="{{ path('app_user') }}"><i class="fa-solid fa-caret-right"></i>&nbsp;Students</a>
                        
                        <div class="nav-main">
                            <a href="{{ path('details_user', {id: app.user.id}) }}" class="nav-main">Profile</a>
            
                            <a href="{{ path('app_logout') }}" class="nav-main">Logout</a>
                        </div>
            
                    {% else %}

                        <div class="nav-main">
                            <a href="{{ path('app_register') }}" class="nav-main">
                                Register
                            </a>
            
                            <a href="{{ path('app_login') }}" class="nav-main">
                                Login
                            </a>
                        </div>
                        
                    {% endif %}

                    <button id="switch-mode">
                        <i class="fa-solid fa-circle-half-stroke"></i>
                    </button>

                    <button id="burger-btn">
                        <i class="fa-solid fa-bars"></i>
                        {# MENU #}
                    </button>
                </nav>
            </header>
            {% endblock %}  
            
            <main>
                <div id="wrapper" class="wrap-{% block pageWrapper %}{% endblock %}">
                    
                    {% block body %}{% endblock %}        
                    
                </div>
            </main>

            {% block footer %}
            <footer>

            </footer>
            {% endblock footer %} 

            {% block javascripts %}
            <script src="https://kit.fontawesome.com/3fb828feff.js" crossorigin="anonymous"></script>
            {% endblock %}
        </div>
        <script src="{{ asset('app/app.js') }}"></script>
    </body>
</html>
