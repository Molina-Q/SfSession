{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    
    {{ form_start(registrationForm) }}
    
        {{ form_errors(registrationForm) }}
        {{ form_row(registrationForm.last_name) }}
        {{ form_errors(registrationForm.last_name) }}

        {{ form_row(registrationForm.first_name) }}
        {{ form_errors(registrationForm.first_name) }}

        {{ form_row(registrationForm.gender) }}
        {{ form_row(registrationForm.birthDate) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.adress) }}
        {{ form_row(registrationForm.postcode) }}
        {{ form_row(registrationForm.city) }}

        {{ form_row(registrationForm.plainPassword) }}
        {{ form_errors(registrationForm.plainPassword) }}

        {{ form_row(registrationForm.agreeTerms) }}
        
        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}

{% endblock %}
