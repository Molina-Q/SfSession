<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="{% block metadesc %}{% endblock %}">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}


    </head>

    <body>
        {% block header %}
        <header>
            <a href="{{ path('app_home') }}">Home</a>

            {% if app.user %}
                
                <a href="{{ path('app_formation') }}">Formations</a>
                            
                <a href="{{ path('app_session') }}">Sessions</a>
                            
                <a href="{{ path('app_tag') }}">Tags and Modules</a>
            
                <a href="{{ path('app_user') }}">Students</a>
        
                <a href="{{ path('app_logout') }}">
                    Logout
                </a>

            {% else %}
                <a href="{{ path('app_register') }}">
                    Register
                </a>

                <a href="{{ path('app_login') }}">
                    Login
                </a>
            {% endif %}
            
        </header>
        {% endblock %}  
        
        <main>
            <div id="wrapper">
                
                {% block body %}{% endblock %}        
                
            </div>
        </main>

        {% block javascripts %}
            <script src="https://kit.fontawesome.com/3fb828feff.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

        {% endblock %}
    </body>
</html>
